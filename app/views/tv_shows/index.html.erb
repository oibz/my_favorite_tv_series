<h1 class="display-3">Series</h1>
<hr>
<p id="notice"><%= notice %></p>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Detalle</th>
      <th>Fecha de lanzamiento</th>
      <th>Rating</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tv_shows.each do |tv_show| %>
      <tr>
        <td><%= tv_show.name %></td>
        <td><%= tv_show.summary %></td>
        <td><%= tv_show.release_date %></td>
        <td><%= tv_show.rating %></td>
        <td><%= link_to 'Ver', tv_show , class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Editar', edit_tv_show_path(tv_show) , class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Eliminar', tv_show, method: :delete, data: { confirm: 'EstÃ¡s segur@?' } , class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

